{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Beacon chain 0",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/beacon-chain",
            "buildFlags": "-tags=minimal",
            "args": [
                "--datadir","${workspaceFolder}/testnet/under/node-0",
                "--genesis-state", "${workspaceFolder}/testnet/under/artifacts/genesis_minimal.ssz",
                "--min-sync-peers", "0",
                "--chain-config-file","${workspaceFolder}/testnet/under/artifacts/config_minimal.yml",
                "--config-file","${workspaceFolder}/testnet/under/artifacts/config_minimal.yml",
                "--chain-id","813",
                "--execution-endpoint","http://localhost:8551",
                "--accept-terms-of-use",
                "--jwt-secret", "${workspaceFolder}/../kairos/testnet/under/node-0/geth/jwtsecret",
                "--contract-deployment-block", "0",
                "--p2p-udp-port", "12000",
                "--p2p-tcp-port", "13000",
                "--rpc-port", "4000",
                "--monitoring-port", "8080",
                "--grpc-gateway-port","3500",
                "--p2p-local-ip", "127.0.0.1",
                "--bootstrap-node", "${workspaceFolder}/testnet/under/artifacts/bootnode.yaml",
                "--verbosity", "debug",
            ]
        },
        {
            "name": "Validator Client 0",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/validator",
            "buildFlags": "-tags=minimal",
            "args": [
                "--wallet-dir","${workspaceFolder}/testnet/under/validator-0",
                "--proposer-settings-file", "${workspaceFolder}/testnet/under/artifacts/recipients/recipient0.yaml",
                "--chain-config-file","${workspaceFolder}/testnet/under/config.yml",
                "--config-file","${workspaceFolder}/testnet/under/config.yml",
                "--wallet-password-file", "${workspaceFolder}/testnet/under/artifacts/wallet/password.txt",
                "--accept-terms-of-use",
                "--force-clear-db",
            ]
        },
        {
            "name": "Beacon chain 1",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/beacon-chain",
            "buildFlags": "-tags=minimal",
            "args": [
                "--datadir","${workspaceFolder}/testnet/under/node-1",
                "--genesis-state", "${workspaceFolder}/testnet/under/artifacts/genesis_minimal.ssz",
                "--min-sync-peers", "0",
                "--chain-config-file","${workspaceFolder}/testnet/under/artifacts/config_minimal.yml",
                "--config-file","${workspaceFolder}/testnet/under/artifacts/config_minimal.yml",
                "--chain-id","813",
                "--execution-endpoint","http://localhost:8552",
                "--accept-terms-of-use",
                "--jwt-secret", "${workspaceFolder}/../kairos/testnet/under/node-1/geth/jwtsecret",
                "--contract-deployment-block", "0",
                "--p2p-udp-port", "12001",
                "--p2p-tcp-port", "13001",
                "--rpc-port", "4001",
                "--monitoring-port", "8081",
                "--grpc-gateway-port","3501",
                "--enable-upnp",
                "--bootstrap-node", "${workspaceFolder}/testnet/under/artifacts/bootnode.yaml",
                "--verbosity", "debug",
            ]
        },
        {
            "name": "Prysm Ctl",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/prysmctl",
            "buildFlags": "-tags=minimal",
            "args": [
                "testnet","generate-genesis",
                "--num-validators", "0",
                "--output-ssz", "${workspaceFolder}/under/genesis.ssz",
                "--chain-config-file", "${workspaceFolder}/under/config.yml",
                "--deposit-json-file", "${workspaceFolder}/under/artifacts/deposits/depositDatas.json",
                "--geth-genesis-json-in", "${workspaceFolder}/../kairos/testnet/under/artifacts/genesis.json",   
            ]
        },
        {
            "name": "Validator Client 1 Pver",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/validator",
            "buildFlags": "-tags=minimal",
            "args": [
                "--pver",
                "--chain-config-file","${workspaceFolder}/under/config.yml",
                "--config-file","${workspaceFolder}/under/config.yml",
                "--beacon-rpc-provider", "127.0.0.1:4001",
                "--beacon-rpc-gateway-provider", "127.0.0.1:3501",
                "--beacon-rest-api-provider", "http://127.0.0.1:3501",
                "--rpc-port", "7001",
                "--accept-terms-of-use",
                "--force-clear-db",
            ]
        },
    ]
}