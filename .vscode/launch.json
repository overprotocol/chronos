{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Beacon chain 0",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/beacon-chain",
            "args": [
                "--datadir","${workspaceFolder}/under/node-0",
                "--min-sync-peers", "0",
                "--chain-config-file","${workspaceFolder}/under/config.yml",
                "--config-file","${workspaceFolder}/under/config.yml",
                "--chain-id","813",
                "--execution-endpoint","http://localhost:8551",
                "--accept-terms-of-use",
                "--jwt-secret", "${workspaceFolder}/../kairos/under/node-0/geth/jwtsecret",
                "--contract-deployment-block", "0",
                "--p2p-udp-port", "12000",
                "--p2p-tcp-port", "13000",
                "--rpc-port", "4000",
                "--monitoring-port", "8080",
                "--grpc-gateway-port","3500",
                "--p2p-local-ip", "127.0.0.1",
                "--bootstrap-node", "${workspaceFolder}/under/bootnode.yaml",
                "--verbosity", "debug",
            ]
        },
        {
            "name": "Validator Client 0",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/validator",
            "args": [
                "--datadir","${workspaceFolder}/under/node-1/validatordata",
                "--accept-terms-of-use",
                "--force-clear-db",
                "--chain-config-file","${workspaceFolder}/under/config.yml",
                "--config-file","${workspaceFolder}/under/config.yml",
                "--wallet-dir","${workspaceFolder}/under/test",
                "--wallet-password-file", "${workspaceFolder}/under/artifacts/wallet/password.txt",
            ]
        },
        {
            "name": "Beacon chain 1",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/beacon-chain",
            "args": [
                "--datadir","${workspaceFolder}/under/node-1/nodes/node-1",
                "--min-sync-peers", "0",
                "--chain-config-file","${workspaceFolder}/under/config.yml",
                "--config-file","${workspaceFolder}/under/config.yml",
                "--chain-id","813",
                "--execution-endpoint","http://localhost:8552",
                "--accept-terms-of-use",
                "--jwt-secret", "${workspaceFolder}/../kairos/under/node-1/geth/jwtsecret",
                "--contract-deployment-block", "0",
                "--p2p-udp-port", "12001",
                "--p2p-tcp-port", "13001",
                "--rpc-port", "4001",
                "--monitoring-port", "8081",
                "--grpc-gateway-port","3501",
                "--grpc-gateway-port","3500",
                "--p2p-local-ip", "127.0.0.1",
                "--bootstrap-node", "${workspaceFolder}/under/bootnode.yaml",
                "--verbosity", "debug",
            ]
        },
        {
            "name": "Prysm Ctl",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/prysmctl",
            "args": [
                "testnet","generate-genesis",
                "--num-validators", "64",
                "--output-ssz", "${workspaceFolder}/under/genesis.ssz",
                "--chain-config-file", "${workspaceFolder}/under/config.yml",
                "--execution-endpoint", "http://localhost:22000",
                "--override-eth1data", "true",
            ]
        }
    ]
}